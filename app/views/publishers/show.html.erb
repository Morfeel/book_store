<div class="modal-dialog modal-lg">
	<div class="modal-content">
		<div class="modal-header">

			<%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_publisher_path(@publisher), type: 'button', class: 'close' %>

			<h4 class="modal-title" id="myModalLabel">
				<%= link_to 'Home/', root_path %>
				<%= link_to 'Publishers', publishers_path %>
			</h4>
		</div>

		<div class="modal-body">
			<div class="media">


				<div class="col-lg-9 col-md-9">

					<div class="caption">
						<h4><%= @publisher.name %></h4>
					</div>


				</div>

			</div>
		</div>



		<div class="modal-footer">
			<%= link_to 'delete', @publisher, method: :delete, type: 'button', class: 'btn btn-danger' %>

		</div>
	</div>


</div>