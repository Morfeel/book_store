<div class="modal-dialog modal-lg">
	<div class="modal-content">
		<div class="modal-header">

			<h4 class="modal-title" id="myModalLabel">
				<%= link_to 'Home/', root_path %>
				<%= link_to 'Books', books_path %>
			</h4>
		</div>
		<%= form_for @book, html: {multipart: true} do |f| %>
		
		<div class="modal-body col-lg-6 col-md-6">
			<%= f.label :image %>
			<div id="dropzone" class="thumbnail center-block">
				<% unless @book.image.blank? %>

					<%= image_tag(@book.image, size: "300", alt: "Avatar", class: 'center-block img-responsive') %>
					<div class="caption">
						<% if @book.new_record? %>
							<h3>Upload a photo for this book, drag and drop a new photo here.</h3>
						<% else %>
							<h3>If you need to upload a new photo, drag and drop a new photo here.</h3>
						<% end %>

						
					</div>
				<% else %>
					<%= image_tag(@book.image, size: "300", alt: "Avatar", class: 'center-block img-responsive') %>
					<div class="caption">
<!-- 
						<h3>You do not have photo for this book, drag and drop a photo here.</h3> -->
					</div>

				<% end %>
			</div>
			<%= file_field_tag 'image', id:'image', class:'hidden' %>


		</div>
		<div class="modal-body col-lg-6 col-md-6">
			<div class="form-group col-lg-12 col-md-12">
				
				<%= f.label :name %>
				<%= f.text_field :name, :class => 'form-control', placeholder: 'Name' %>
			</div>
			<div class="form-group col-lg-6 col-md-6">
				<%= f.label :price %>
				<%= f.text_field :price, :class => 'form-control', placeholder: 'Price' %>
			</div>
			<div class="form-group col-lg-6 col-md-6">
				<%= f.label :stock %>
				<%= f.text_field :stock, :class => 'form-control', placeholder: 'Stock' %>
			</div>
			<div class="form-group col-lg-6 col-md-6">
				<%= f.label :language %>
				<%= f.text_field :language, :class => 'form-control', placeholder: 'Language' %>

			</div>

			<div class="form-group col-lg-6 col-md-6">
				<%= f.label :paperback %>
				<%= f.text_field :paperback, :class => 'form-control', placeholder: 'Paperback' %>
			</div>
			<div class="form-group col-lg-12 col-md-12">
				<%= f.label :isbn , 'ISBN' %>
				<%= f.text_field :isbn, :class => 'form-control', placeholder: 'ISBN' %>

			</div>

			<div class="form-group col-lg-12 col-md-12">
				<%= f.label :description %>
				<%= f.text_area :description, :class => 'form-control', placeholder: 'Description' %>
			</div>
			
			

		</div>

		<label></label>
		
		<div class="modal-footer">

			<% if @book.new_record? %>

				<%= link_to 'delete', @book, method: :delete, type: 'button', class: 'btn btn-danger' %>
				<%= f.submit('Save', type: 'submit', class: 'btn btn-primary') %>

			<% else %>

				<%= link_to 'delete', @book, method: :delete, type: 'button', class: 'btn btn-danger' %>
				<%= f.submit('Save', type: 'submit', class: 'btn btn-primary') %>

			<% end %>
			

		</div>
		<% end %>
	</div>
</div>