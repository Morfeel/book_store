<div class="modal-dialog modal-lg">
	<div class="modal-content">
		<div class="modal-header">

			<%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_book_path(@book), type: 'button', class: 'close' %>

			<h4 class="modal-title lead" id="myModalLabel">
				<%= link_to 'Home/', root_path %>
				<%= link_to 'Books', books_path %>
			</h4>
		</div>

		<div class="modal-body">
			<div class="media">
				<div class="text-center col-lg-3 col-md-3 ">
					<%= image_tag (@book.image ? @book.image : 'no-image.jpg'), alt: @book.name %>

				</div>


				<div class="col-lg-9 col-md-9">

					<div class="caption">
						<h4><%= @book.name %> <small><var>
							<% unless @book.author_names.blank? %>
							<%= @book.author_names.join(', ') %>
							<% else %>
								Joe Doe
							<% end %>
						</var></small></h4>
						<table class="table">
							<tr>
								<td><strong>Price</strong></td>
								<td><%= number_to_currency(@book.price) %></td>
								<td><strong>Stock</strong></td>
								<td><%= @book.stock %></td>
								<tr>
									<td><strong>Language</strong></td>
									<td><%= @book.language %></td>
									<td><strong>Paperback</strong></td>
									<td><%= @book.paperback %></td>
								</tr>
								<tr>
									<td><strong>Categories</strong></td>
									<td colspan="3">

										<div id="categories-edit" class="tag-list"></div>

										<script type="text/javascript">

										$(document).ready(function(){
											tags = $('#categories-edit').tags({
												tagData: <%= raw @categories %>,
												suggestions:<%= raw @suggestions %>,
												excludeList:<%= raw @categories %>,
												readOnly: true
											});

										});

										</script>
									</td>
								</tr>
								<td><strong>ISBN</strong></td>
								<td colspan="3"><%= @book.isbn %></td>
							</tr>
							<tr>
									<td><strong>Publisher</strong></td>
									<td><%= @book.publisher.name if @book.publisher %></td>
									<td><strong>Supplier</strong></td>
									<td><%= @book.supplier.name if @book.supplier %></td>
								</tr>
						</table>
					</div>


				</div>

			</div>
		</div>



		<div class="modal-footer">
			<%= link_to 'delete', @book, method: :delete, type: 'button', class: 'btn btn-danger' %>

		</div>
	</div>


</div>