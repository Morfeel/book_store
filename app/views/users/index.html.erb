<% @title = 'Users' %>
<table class="table">
	<% if @users.empty? %>
	<%= 'no records' %>


	<% else %>
	<tr>
		<th>#</th>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
		<th></th>
		<th></th>
	</tr>

	<% @users.each do |user| %>

	<tr>
		<td><%= user.id %></td>
		<td><%= user.first_name %></td>
		<td><%= user.last_name %></td>
		<td><%= user.email %></td>
		<td><%= link_to('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, {:action => 'edit', :id => user.id}, :class =>'action edit') %></td>
		<td><%= link_to('<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, {:action => 'destory', :id => user.id}, :class =>'action delete') %></td>
	</tr>
	<% end %>

	<% end %>

	<%= flash[:notice].html_safe if flash[:notice] %>

</table>

<%= link_to('new', {:action => 'new'}) %>