<div class="row col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

	<div class="text-center col-sm-6 col-md-6 col-lg-5">
		<%= image_tag @book.image, class: 'img-responsive', alt: @book.name %>
	</div>

	<div class="col-sm-6 col-md-6 col-lg-offset-1 col-lg-6">
		<div class="caption">
			<h2><%= @book.name%></br><small>By <var>Joe Doe</var></small></h2>

		</br>
		<p class="lead"><%= @book.description %></p>
	</br>

	<h1 class="lead"><%= number_to_currency(@book.price) %></br>
		<small><var><%= @book.stock %> left</var></small>
	</h1>
</br>

	<%= form_for @item = OrderItem.new, url:{controller: "store", action: "add"}, remote: true  do |f| %>
	<%= f.hidden_field :book_id, value: @book.id %>
	<div class="form-group" style="width:50px;">
		<%= f.text_field :quantity, value: '1', class:'form-control' %>
	</div>

	<div class="form-group">

	<%= f.submit 'Add to cart', class: 'btn btn-primary btn-lg col-xs-6 col-sm-6 col-md-6 col-lg-5' %>
</div>



	<% end %>


</div>
</div>


</div>