<div class="modal-header">
	<!-- <h4 class="modal-title">Users</h4> -->

	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<!-- Brand and toggle get grouped for better mobile display -->
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#content-nav">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<h4 class="navbar-text lead" href="#">
					<%= link_to 'Home', root_path %>
				</h4>

			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="content-nav">

				<ul class="nav navbar-nav navbar-right">
					<form class="navbar-form navbar-right" role="search">

						<div class="form-group input-group">
							<input type="text" class="form-control" placeholder="Search for...">
							<span class="input-group-btn">
								<button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
							</span>
						</div><!-- /input-group -->
					</form>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Show number <span class="caret"></span></a>
						<ul class="dropdown-menu" role="menu">
							<li><a href="#">Action</a></li>
							<li><a href="#">Another action</a></li>
							<li><a href="#">Something else here</a></li>
							<li class="divider"></li>
							<li><a href="#">Separated link</a></li>
						</ul>
					</li>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Sort by <span class="caret"></span></a>
						<ul class="dropdown-menu" role="menu">
							<% if @sortable_columns %>
								<% @sortable_columns.each do |column| %>
									<li><a href="#"><%= column %></a></li>
								<% end %>
							<% end %>
						</ul>
					</li>

				</ul>

			</div><!-- /.navbar-collapse -->
		</div><!-- /.container-fluid -->
	</nav>
</div>


<div class="modal-body">

	<div class="panel-group" id="categorygroup" role="tablist" aria-multiselectable="true">
		<% if @categories %>
		
		<% @categories.each do |category| %>
		<div class="panel panel-default">
			<div class="panel-heading" role="tab" id="heading<%= category.id %>">
				<h4 class="panel-title">
					<a class="collapsed" data-toggle="collapse" data-parent="#categorygroup" href="#collapse<%= category.id %>" aria-expanded="false" aria-controls="collapse<%= category.id %>">
						<var><%= category.id %>.</var> <%= category.name %>
					</a>
					<span class="pull-right">
						<%= link_to ('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>').html_safe, edit_category_path(category) %>
						<%= link_to ('<span class="glyphicon glyphicon-file" aria-hidden="true"></span>').html_safe, category %>
						<%= link_to ('<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>').html_safe, category, method: :delete, confirm: 'Are you sure you want to delete this category', remote: true %>
					</span>
				</h4>

			</div>
			<div id="collapse<%= category.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading<%= category.id %>">
				<div class="panel-body">
					<div class="media">
						<div class="media-left">
							<a href="#">
								<%= image_tag(category.image, size: "180", alt: "Avatar", class:'media-object') %>
							</a>
						</div>
						<div class="media-body">

							<div class="caption">
								<h4><%= category.name %></h4>
								<p><%= category.description %></p>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
		<% end %>
		<% else %>
		<%= 'no records' %>
		<% end %>

	</div>
</div>
<div class="modal-footer">
	<%= link_to 'Create', new_category_path, type: 'button', class: 'btn btn-primary pull-left' %>
	<%= will_paginate @categories, previous_label: h('<'), next_label: h('>'), renderer: BootstrapPagination::Rails, class:'pull-right', id: nil %>
</div>

